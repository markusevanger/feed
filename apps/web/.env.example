# Site Configuration
NEXT_PUBLIC_SITE_URL=https://feed.markusevanger.no

# Sanity Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2025-03-03

# Self-Hosted Media Server (for Sanity Studio uploads)
# These are exposed to the browser (SANITY_STUDIO_ prefix)
SANITY_STUDIO_MEDIA_SERVER_URL=http://localhost:3001
SANITY_STUDIO_MEDIA_API_KEY=your-api-key-here

# Next.js Image Optimization (server-side only)
# Set this to your media server's hostname (without protocol)
MEDIA_SERVER_HOSTNAME=localhost
