{
  "name": "feed-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "pnpm --filter @feed/web dev",
    "dev:media": "pnpm --filter @feed/media-server dev",
    "build": "turbo build",
    "build:web": "pnpm --filter @feed/web build",
    "build:media": "pnpm --filter @feed/media-server build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck --filter='*'",
    "clean": "turbo clean && rm -rf node_modules",
    "migrate:self-hosted": "pnpm --filter @feed/web exec tsx ../../migrations/migrate-to-self-hosted.ts"
  },
  "devDependencies": {
    "sharp": "^0.33.5",
    "turbo": "^2.3.0",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "scrollmirror",
      "sharp"
    ]
  }
}
